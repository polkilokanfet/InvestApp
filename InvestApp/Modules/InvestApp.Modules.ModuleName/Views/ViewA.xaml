<mvvm:ViewBase x:Class="InvestApp.Modules.ModuleName.Views.ViewA"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:local="clr-namespace:InvestApp.Modules.ModuleName.Views"
               xmlns:mvvm="clr-namespace:InvestApp.Core.Mvvm;assembly=InvestApp.Core"
               xmlns:prism="http://prismlibrary.com/"
               prism:ViewModelLocator.AutoWireViewModel="True" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="Load" Command="{Binding LoadCommand}"></Button>

        <DataGrid Grid.Row="1" AutoGenerateColumns="True" ItemsSource="{Binding Collection}"></DataGrid>

    </Grid>
</mvvm:ViewBase>
